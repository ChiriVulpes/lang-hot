{
    "name": "lang-hot",
    "displayName": "lang-hot",
    "description": "Language support for HotLang",
    "version": "0.0.1",
    "publisher": "Aarilight",
	"icon": "img/icon.png",
    "engines": {
        "vscode": "^1.13.0"
    },
	"repository": {
		"type": "git",
		"url": "https://github.com/yuudaari/lang-hot.git"
	},
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [{
            "id": "hot",
            "aliases": ["Hot", "hot"],
            "extensions": ["hot"],
            "configuration": "./language.json"
        }],
        "grammars": [{
            "language": "hot",
            "scopeName": "source.hot",
            "path": "./syntaxes/hot.json"
        }],
        "snippets": [
            {
                "language": "hot",
                "path": "./snippets/hot.json"
            }
        ]
    }
}